<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Reservation.ReservationActivity">

    <TextView
        android:text="@string/confirm_reservation"
        android:id="@+id/tv_reserve_confirm"
        android:gravity="center"
        android:textSize="36sp"
        android:background="@drawable/white_onclick_grey"
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:layout_height="0dp" />

    <TextView
        android:padding="16dp"
        android:textSize="24sp"
        android:text="@string/reservation_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:hint="0101010"
        android:textSize="36dp"
        android:id="@+id/tv_reserve_code"
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:layout_height="0dp" />
    <Button
        android:text="Back To Home"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:id="@+id/btn_reserve_back"
        android:background="@drawable/white_onclick_grey"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>